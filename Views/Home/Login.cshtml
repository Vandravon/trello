@{
    ViewData["Title"] = "Authentification";
}
<h1>@ViewData["Title"]</h1>

<div class="card">

    <form method="POST" asp-controller="Home" asp-action="Login">

        <div class="input-group m-3">
            <p><input class="px-5" type="text" id="mail" name="mail" placeholder="Mail"></p>
        </div>

        <div class="input-group m-3">
            <p><input class="px-5" type="password" id="password" name="password" placeholder="Mot de passe"></p>
        </div>

        <div class="input-group m-3">
            <input type="submit" value="Login" />
        </div>

    </form>
</div>