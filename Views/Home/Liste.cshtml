@{
    ViewData["Title"] = "Liste";
}
<h1>@ViewData["Title"]</h1>

<div class="mb-5">
    <a class="btn btn-success mr-4" asp-controller="Liste" asp-action="Add">Ajouter une liste</a>
    <a class="btn btn-success" asp-controller="Carte" asp-action="Add">Ajouter une carte</a>
</div>

<div class="d-flex justify-content-around flex-wrap">
    @foreach (Liste liste in Model.IdListes)
    {

        <div class="card border border-dark border-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title mb-1">@liste.Nom </h5>
            <a class="btn btn-outline-warning" asp-controller="Liste" asp-action="Edit" asp-route-id="@liste.IdListe">Edit</a>
            <a class="btn btn-outline-danger" asp-controller="Liste" asp-action="Delete" asp-route-id="@liste.IdListe">Supprimer</a>
            <p class="card-subtitle mt-1 mb-4 text-muted">Id: @liste.IdListe</p>
        
                @foreach (Carte carte in liste.GetCartes())
                {
                    <div class="border border-info p-2 my-2">
                        <p class="card-text">@carte.Titre</p>
                        <h6 class="card-subtitle mb-2 text-muted">@carte.Description</h6>
                        <p class="card-text">@carte.DateCreation</p>
                        <a class="btn btn-outline-warning" asp-controller="Carte" asp-action="Edit" asp-route-id="@carte.IdCarte">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Carte" asp-action="Delete" asp-route-id="@carte.IdCarte">Supprimer</a>
                    </div>
                }
        </div>
        </div>
    }

</div>
