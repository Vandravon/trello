@{
    ViewData["Title"] = "Ajouter une carte";
}

<h1>@ViewData["Title"]</h1>

<div class="card">

    <form method="POST" asp-controller="Carte" asp-action="Add">

        <div class="input-group m-3">
            <p><input class="px-5" type="text" id="titre" name="titre" placeholder="Titre de la carte"></p>
        </div>

        <div class="input-group m-3">
            <p><input class="px-5" type="text" id="description" name="description" placeholder="Description de la carte"></p>
        </div>

        <div class="input-group m-3">
            <p><input class="px-5" type="text" id="idListe" name="idListe" placeholder="Id de la liste"></p>
        </div>

        <div class="input-group m-3">
            <input type="submit" value="Ajouter" />
        </div>

    </form>
</div>

